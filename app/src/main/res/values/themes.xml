<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main application theme -->
    <style name="Theme.Realio" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Splash screen theme -->
    <style name="App.Starting.Theme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_light_wrapper</item>
        <item name="postSplashScreenTheme">@style/Theme.Realio</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>

</resources>
